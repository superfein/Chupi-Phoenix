      <div class="press-logo current"><img src="{{ 'press-logo-vogue.png' | asset_url }}" alt="Vogue" title="Vogue"></div>
      <div class="press-logo"><img src="{{ 'press-logo-marie-claire.png' | asset_url }}" alt="Marie Claire" title="Marie Claire"></div>
      <div class="press-logo"><img src="{{ 'press-logo-sunday-times.png' | asset_url }}" alt="The Sunday Times" title="The Sunday Times"></div>
      <div class="press-logo"><img src="{{ 'press-logo-refinery29.png' | asset_url }}" alt="Refinery 29" title="Refinery 29"></div>
      <div class="press-logo"><img src="{{ 'press-logo-new-york-times.png' | asset_url }}" alt="New York Times" title="New York Times"></div>
