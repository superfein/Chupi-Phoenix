{% elsif template == 'hvp-press-quotes' %}
  {% assign sectionId = 'hvp-ugc' %}
{% endif %}


<section id="{{ sectionId }}" class="press-quotes image-cover" style="background-image: url({{ 'product-press-bg2.jpg' | asset_url}});">
  <div class="content">
    <h2>In the press</h2>
    <div class="press-quotes">
      <div class="press-quote active"><p>I love the idea of buying something now that will become an heirloom for my future children to cherish forever</p></div>
