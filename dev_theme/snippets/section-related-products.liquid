
{% comment %} Related products {% endcomment %}



{% assign sectionId = '' %}
{% if template == 'product' %}
  {% assign sectionId = 'product-related' %}
{% elsif template == 'product-hvp' %}
  {% assign sectionId = 'hvp-related' %}
{% endif %}



<section id="{{ sectionId }}" class="related-products" data-related-product-count="3">

  <div class="content">
    <h2>You may also like</h2>

    <div class="grid">

      {% for i in (1..3) %}
        <div class="grid-item">
          {% render 'product-card' with product as product %}
        </div>
      {% endfor %}

    </div> <!-- end .grid -->

  </div> <!-- end .content -->

</section>



{% comment %} Load JS for this snippet with defer {% endcomment %}
<script src="{{ 'related-products.js' | asset_url }}" defer></script>
